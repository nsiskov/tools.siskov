<!doctype html>
<html lang="{{textResources.lang}}">
	<head>
		<base href="{{host}}/"/>
		<title>{{pageContext.headTitle}} - {{textResources.siteTitle}}</title>
		<meta name="description" content="{{ pageContext.headDescription }}"/>
		<meta name="keywords" content="{{pageContext.keywords}}"/>
		<meta name="language" content="{{textResources.lang}}"/>
		<meta name="copyright" content="{{textResources.headCopyright}}"/>

		<meta http-equiv="content-type" content="text/html; charset=utf-8"/>
		<link rel="stylesheet" href="css/screen.css" type="text/css"/>

		<link rel="icon" href="images/favicon.ico" type="image/x-icon"/>
		<link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon"/>
		<link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />
		<link rel="canonical" href="http://{{pageContext.canonicalUrl}}"/>

		<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=2.0;" />
		
		<meta property="og:url" content="http://{{pageContext.canonicalUrl}}" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="{{textResources.siteTitle}} - {{pageContext.headTitle}}" />
		<meta property="og:image" content="{{host}}/images/logo_small.jpg" />
		<meta property="og:image:type" content="image/jpeg" />
		<meta property="og:image:width" content="100" />
		<meta property="og:image:height" content="50" />
		<meta property="og:site_name" content="Siskov Tools" />

		<script type="text/javascript" src="js/common.js" ></script>
		<script type="text/javascript" src="js/trd-min.js" ></script>
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-35601927-1']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>
	</head>
	<body itemscope itemtype="http://schema.org/ItemPage" onload="javascript:load(event);">
		{% include "fragment/header.twig" %}
		<div class="colmask threecol">
			<div class="colmid">
				<div class="colleft">
					<div itemprop="mainContentOfPage" itemscope itemtype="http://schema.org/WebPageElement" class="col1">
						<div itemprop="name" class="tooltitle">
							<h2>{{pageContext.sectionTitle}}</h2>
						</div>
						<div class="social">
							{% include "fragment/social.twig" %}
						</div>
						{% block content %}{% endblock %}
					</div>
					<div class="col2">
						<div itemprop="description" class="sidecontent">
							{{pageContext.description|raw}}
						</div>
					</div>
					<div class="col3">
						<div itemscope itemtype="http://schema.org/WebApplication" class="sidecontent">
							<div itemprop="description">
								<h3>{{textResources.right_browserRequirementsTitle}}</h3>
								<p>
									<span itemprop="browserRequirements">{{textResources.right_browserRequirementsText}}</span>
								</p>
								<h3>{{textResources.right_securityTitle}}</h3>
								<p>{{textResources.right_securityText}}</p>
								<h3>{{textResources.right_chainTitle}}</h3>
								<p>{{textResources.right_chainText}}</p>
								{% block right %}{% endblock %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{% include "fragment/footer.twig" %}
	</body>
</html>