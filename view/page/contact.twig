{% extends "layout.twig" %}

{% block content %}
<div class="tooldescription" itemprop="specialty" itemscope itemtype="http://schema.org/Specialty">
	<span itemprop="description">{{ pageContext.pageDescription|raw }}</span>
</div>
	 {% if contactSuccess is not null %}
		 {% if contactSuccess == true %}
		 	<p>{{ pageContext.submitOK }}</p>
		 {% else %}
		 	<p>{{ pageContext.submitError }}</p>
		 {% endif %}
	 {% else %}
	 <div id="srcblock">
		 <form name="base" method="post" action="">
		 	<textarea id="srctext" rows="8" cols="40" name="message"></textarea>
		 	<input style="margin-top: 20px" type="submit" name="submit" value="send"/>
		 </form>
	 </div>
	 {% endif %}
{% endblock %}